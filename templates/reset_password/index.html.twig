{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - La boutique française{% endblock %}

{% block container %}
    <div class="block-small">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <form method="post">

            <h1 class="h3 mb-3 font-weight-normal">Réinitialisé votre mot de passe</h1>
            <label for="inputEmail">Votre Email</label>
            <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Insérer votre Email" required autofocus>

            <button class="btn btn-block btn-info mt-3" type="submit">
                Valider
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('register') }}">vous connecter</a>?</p>
        </form>
    </div>
{% endblock %}
